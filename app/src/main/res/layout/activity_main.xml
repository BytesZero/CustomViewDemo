<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zsl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.zsl.customviewdemo.view.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        zsl:titleText="I Love You"
        zsl:titleTextColor="#ffffff"
        zsl:titleTextSize="45sp" />

    <com.zsl.customviewdemo.view.CustomImageText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zsl:imageText="篮球妹子"
        zsl:imageTextColor="#c105c7"
        zsl:imageTextSize="20sp"
        zsl:imageSrc="@mipmap/meizi"
        android:padding="5dp"
        zsl:imageScaleType="center"/>

</LinearLayout>
