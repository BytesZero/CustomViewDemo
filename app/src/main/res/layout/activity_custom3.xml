<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zsl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.zsl.customviewdemo.view.CustomCircle
        android:layout_width="200dp"
        android:layout_height="200dp"
        zsl:circleWith="50dp"
        zsl:firstColor="#00fd15"
        zsl:secondColor="#ff0000"
        zsl:speed="30"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <com.zsl.customviewdemo.view.CustomCircle
        android:layout_width="150dp"
        android:layout_height="150dp"
        zsl:circleWith="20dp"
        zsl:firstColor="#673AB7"
        zsl:secondColor="#03A9F4"
        zsl:speed="10"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <com.zsl.customviewdemo.view.CustomCircle
        android:layout_width="100dp"
        android:layout_height="100dp"
        zsl:circleWith="5dp"
        zsl:firstColor="#FFEB3B"
        zsl:secondColor="#4CAF50"
        zsl:speed="5"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
</LinearLayout>